<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.snackbar_itgm.Pedidos" >

     <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="24dp"
       android:text="Snack-Bar"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textSize="35sp" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:text="ITGAM"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView2"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="84dp"
         android:text="Gracias por su preferncia" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView3"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="47dp"
         android:text="Se enviara una notificacion cuando su pedido este listo."
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <Button
         android:id="@+id/VolverU"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView4"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="48dp"
         android:text="Cancelar" />

     <Button
         android:id="@+id/btnMostrarNotificacion"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/VolverU"
         android:layout_alignBottom="@+id/VolverU"
         android:layout_alignRight="@+id/textView4"
         android:text="Enviar Pedido" />

     <TextView
         android:id="@+id/textView5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/VolverU"
         android:layout_below="@+id/textView2"
         android:layout_marginTop="27dp"
         android:text="Total a Pagar:" />

     <TextView
         android:id="@+id/textView6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/textView5"
         android:layout_alignLeft="@+id/textView2"
         android:layout_marginLeft="26dp"
         android:text="$$$$$$$$$$$" />

</RelativeLayout>
