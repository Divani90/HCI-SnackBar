<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.snackbar_itgm.Bebidas" >

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="24dp"
       android:text="Snack-Bar"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textSize="35sp" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="30dp"
       android:text="Menu Bebidas" />

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/textView2"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="18dp"
       android:text="Seleccione su bebida" />

   <Spinner
       android:id="@+id/spinner1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignRight="@+id/textView2"
       android:layout_below="@+id/textView3"
       android:layout_marginTop="23dp" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/spinner1"
       android:layout_below="@+id/spinner1"
       android:layout_marginTop="28dp"
       android:text="Cantidad" />

   <Button
       android:id="@+id/Terminar2"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/Volver3"
       android:layout_marginTop="18dp"
       android:layout_toRightOf="@+id/spinner1"
       android:text="Terminar" />

   <Button
       android:id="@+id/Volver3"
       style="?android:attr/buttonStyleSmall"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="27dp"
       android:layout_toLeftOf="@+id/textView3"
       android:text="Volver" />

   <Button
       android:id="@+id/Add2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/Terminar2"
       android:layout_alignRight="@+id/Terminar2"
       android:text="AÃ±adir Producto" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/spinner1"
       android:layout_alignRight="@+id/Add2"
       android:layout_marginBottom="22dp"
       android:text="$$$$" />

   <EditText
       android:id="@+id/editText1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/textView5"
       android:layout_toRightOf="@+id/Volver3"
       android:ems="10"
       android:inputType="number" >

       <requestFocus />
   </EditText>

</RelativeLayout>
